<div class="text-place">
  <div class="cadre">
    <h1>Ã‰dite ton profile, <%= user.name %> </h1>
    <% if(flash && flash.err) {%>
      <ul class="place-info">
        <% flash.err.forEach( function(error){%>
          <li>
            <%= error.message %>
          </li>
      </ul>
        <%})%>
    <% }%>
    <p>
      <form action="/user/update/<%= user.id%>" method="POST" class="form">
        <input name="name" placeholder="Nom" class="form-entry" value="<%= user.name %>"/>
        <input type="email" name="email" placeholder="Email" class="form-entry" value="<%= user.email %>"/>
        <input type="password" name="password" placeholder="Mot de passe" class="form-entry" value=""/>
        <% if(session.User.admin){%>
          <input type="hidden" name="admin" value="unchecked"/>
          <label for="admin">Administrateur</label>
          <input type="checkbox" name="admin" <%=(user.admin)?"checked":""%>/>
        <%}%>
        <div class="btn-space">
          <input type="submit" class="btn btn-green"/>
        </div>
        <input type="hidden" name="_csrf" value="<%= _csrf%>"/>
      </form>
  </div>
</div>

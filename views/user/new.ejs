<div class="text-place">
  <div class="cadre">
    <h1>Formule ton inscription </h1>
    <% if(flash && flash.err) {%>
      <ul class="place-info">
	
	<%console.log(flash.err); flash.err.forEach( function(error){%>
	  <li>
            <%= error.message %>
	</li>
      </ul>
	<%})%>
    <% }%>
    <p>
      <form action="/user/create" method="POST" class="form">
        <input name="name" placeholder="Nom" class="form-entry"/>
        <input type="email" name="email" placeholder="Email" class="form-entry"/>
        <input type="password" name="password" placeholder="Mot de passe"  class="form-entry"/>
        <div class="btn-space">
          <input type="submit" class="btn btn-green"/>
        </div>
	<input type="hidden" name="_csrf" value="<%= _csrf%>"/>
      </form>
  </div>
</div>
